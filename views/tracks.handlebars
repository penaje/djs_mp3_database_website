    <h1 style="padding: 5px;margin: 10px;margin-right: 0px;margin-bottom: 0px;margin-top: 0px;">Tracks</h1>
    <div class="table-responsive" style="margin: 20px;padding: 10px;">
        <table id='tracks-table' class="table">
            <thead>
                <tr>
                    {{#each headers}}
                    <th>
                        {{this}}
                    </th>
                    {{/each}}
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td>{{this.track_id}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.artist_id}}</td>
                    <td>{{this.album_id}}</td> 
                    <td>{{this.ind_price}}</td>  
                    <td>{{this.album_price}}</td>     
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <h2 style="margin: 10px;margin-top: 10px;padding: 5px;">Add New Track Information</h2>
    <form id='add-tracks-form' method="post" action='tracks/add-tracks-form' class="text-start" style="font-weight: bold;margin: 20px;padding: 10px;">
        <label for='input-title' class="form-label">Track Title</label>
        <input class="form-control" type="text" name='input-title' id="input-title" required="">

        <label for='input-artist-id' class="form-label">Artist Name</label>
        <select name='input-artist-id' id="input-artist-id">
            <option value=''>Select an Artist</option>
            {{#each artist_info}}
            <option value="{{this.artist_id}}">{{this.artist_name}}</option>
            {{/each}}
        </select>
        <br>

        <label for='input-album-id' class="form-label">Album Name</label>
        <select name='input-album-id' id="input-album-id">
            <option value=''>Select an Album</option>
            {{#each album_info}}
            <option value="{{this.album_id}}">{{this.album_title}}</option>
            {{/each}}
        </select>
        <br>

        <label for='input-ind-price'class="form-label">Indvidual Price</label>
        <input class="form-control" type="number" step='0.01' name='input-ind-price'id="input-ind-price" required="">

        <label for='input-album-price'class="form-label">Album Price</label>
        <input class="form-control" type="number" step='0.01' name='input-album-price'id="input-album-price" required=''>


        <input  text='Add New Track'type='submit'>

    </form>
