    <h1 style="padding: 5px;margin: 10px;margin-right: 0px;margin-bottom: 0px;margin-top: 0px;">Albums</h1>
    <div class="table-responsive" style="margin: 20px;padding: 10px;">
        <table id='albums-table' class="table">
            <thead>
                <tr>
                    {{#each data.[0]}}
                    <th>
                        {{@key}}
                    </th>
                    {{/each}}
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td>{{this.album_id}}</td>
                    <td>{{this.album_title}}</td>
                    <td>{{this.genre}}</td>
                    <td>{{this.release_date}}</td>     
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <h2 style="margin: 10px;margin-top: 10px;padding: 5px;">Add New Order Information</h2>
    <form id='add-albums-form' method="post" action='albums/add-albums-form' class="text-start" style="font-weight: bold;margin: 20px;padding: 10px;">
        <label for='input-albumtitle' class="form-label">Album Title</label>
        <input class="form-control" type="text" name='input-albumtitle' id="input-albumtitle" required="">

        <label for='input-genre' class="form-label">Genre</label>
        <input class="form-control" type="text" name='input-genre' id="input-genre">

        <label for='input-releasedate'class="form-label">Release Date</label>
        <input class="form-control" type="date" name='input-releasedate' id="input-releasedate">

        <input  text='Add New Album'type='submit'>

    </form>
