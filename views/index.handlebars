    <h1 style="padding: 5px;margin: 10px;margin-right: 0px;margin-bottom: 0px;margin-top: 0px;">Customers</h1>
    <div class="table-responsive" style="margin: 20px;padding: 10px;">
        <table id='customer-table' class="table">
            <thead>
                <tr>
                    {{#each data.[0]}}
                    <th>
                        {{@key}}
                    </th>
                    {{/each}}
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td>{{this.customer_id}}</td>
                    <td>{{this.customer_first_name}}</td>
                    <td>{{this.customer_last_name}}</td>
                    <td>{{this.customer_phone}}</td> 
                    <td>{{this.customer_street}}</td>  
                    <td>{{this.customer_apt}}</td>     
                    <td>{{this.customer_city}}</td>  
                    <td>{{this.customer_state}}</td>  
                    <td>{{this.customer_zip}}</td>
                    <td>{{this.customer_email}}</td> 
                    <td>{{this.credit_card_number}}</td>     
                    <td>{{this.credit_card_exp}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <h2 style="margin: 10px;margin-top: 10px;padding: 5px;">Add New Customer Information with AJAX!</h2>
    <form id='add-customer-form-ajax' class="text-start" style="font-weight: bold;margin: 20px;padding: 10px;">
        <label for='input-fname' class="form-label">First Name</label>
        <input class="form-control" type="text" name='input-fname' id="input-fname" required="">

        <label for='input-lname' class="form-label">Last Name</label>
        <input class="form-control" type="text" name='input-lname' id="input-lname" required="">

        <label for='input-pnumber'class="form-label">Customer Phone Number</label>
        <input class="form-control" type="number" name='input-pnumber' id="input-pnumber" required="">

        <label for='input-street'class="form-label">Street Address</label>
        <input class="form-control" type="text" name='input-street'id="input-street" required="">

        <label for='input-apt'class="form-label">Apt #</label>
        <input class="form-control" type="text" name='input-apt'id="input-apt">

        <label for='input-city' class="form-label">City</label>
        <input class="form-control" type="text" name='input-city'id="input-city" required="">

        <label for='input-state'class="form-label">State</label>
        <input class="form-control" type="text" name='input-state' id="input-state" minlength="2" maxlength="2" required="">
 
        <label for='input-zip' class="form-label">Zip Code</label>
        <input class="form-control" type="number" name='input-zip'id="input-zip" required="">

        <label for='input-email'class="form-label">Email&nbsp;</label>
        <input class="form-control" type="text" name='input-email'id="input-email" required="">

        <label for='input-card'class="form-label">Credit Card Number</label>
        <input class="form-control" type="number" name='input-card'id="input-card" required="">

        <label for='input-cardexp'class="form-label">Credit Card Exp</label>
        <input class="form-control" type="number" name='input-cardexp' id="input-cardexp" required="">

        <input  text='Add New Customer(real)'type='submit'>

        <button class="btn btn-primary d-xxl-flex justify-content-xxl-end" id="add_new_customer" type="button"
            style="margin-top: 5px;padding: 5px 12px;">Add New Customer</button>
    </form>
